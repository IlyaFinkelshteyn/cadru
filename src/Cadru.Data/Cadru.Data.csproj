<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net45;netstandard1.3</TargetFrameworks>
    <Version>4.0.0-beta-46</Version>
    <Authors>Scott Dorman</Authors>
    <Company>Scott Dorman</Company>
    <Product>Cadru Framework</Product>
    <Description />
    <Copyright>Copyright © Scott Dorman</Copyright>
    <PackageLicenseUrl>http://opensource.org/licenses/Ms-PL.html</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/scottdorman/cadru</PackageProjectUrl>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Excel\Reader\**" />
    <EmbeddedResource Remove="Excel\Reader\**" />
    <None Remove="Excel\Reader\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="ExcelReader.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\Cadru.licenseheader" Link="Cadru.licenseheader" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net45' ">
    <Reference Include="System.Xml" />
    <Reference Include="System.IO.Compression" />
    <Reference Include="System.Data" />
    <Reference Include="System.Data.Linq" />
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="1.1.1" />
    <PackageReference Include="DocumentFormat.OpenXml" Version="2.7.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Cadru.Core\Cadru.Core.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard1.3'">
    <PackageReference Include="System.Data.Common">
      <Version>4.3.0</Version>
    </PackageReference>
  </ItemGroup>

</Project>